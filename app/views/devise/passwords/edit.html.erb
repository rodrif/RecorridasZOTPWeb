<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => 'form-horizontal container-fluid'}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nueva contrase単a", class: "col-md-1 control-label", for: "resource_password" %><br />
    <div class="col-md-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nueva contrase単a" , class: "col-md-1 control-label", for: "resource_password_confirmation" %>
    <div class="col-md-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions btn-group col-md-offset-4">
    <%= f.submit 'Cambiar mi contrase単a', class: "btn btn-primary text-center" %>
  </div>

<% end %>

