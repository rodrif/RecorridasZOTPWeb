<h2 class="sub-header">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal container-fluid'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-md-1 control-label", for: "resource_email" %>
    <div class="col-md-10">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="actions btn-group col-md-offset-3">
    <%= f.submit 'Enviar las instrucciones para resetear la contraseña', class: "btn btn-primary text-center" %>
  </div>

<% end %>

<div class="container-fluid">
  <%= render "devise/shared/links" %>
</div>