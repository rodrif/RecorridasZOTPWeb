<h2 class="sub-header">Ingresar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal container-fluid'}) do |f| %>

 <div class="form-group">
    <%= f.label :email, class: "col-md-1 control-label", for: "resource_email" %>
    <div class="col-md-11">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "ContraseÃ±a", class: "col-md-1 control-label", for: "resource_password" %>
    <div class="col-md-11">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? && false %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "Recordarme" %>
    </div>
  <% end -%>

    <div class="actions btn-group col-md-offset-5">
    <%= f.submit 'Ingresar', class: "btn btn-primary text-center" %>
  </div>
<% end %>

