<h2 class="sub-header">Ingresar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal container-fluid'}) do |f| %>

 <div class="form-group">
    <%= f.label :email, class: "col-md-1 control-label" %>
    <div class="col-md-11">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a", class: "col-md-1 control-label" %>
    <div class="col-md-11">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", :onkeypress => "if (event.keyCode == 13) { this.form.submit(); return false; }" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? && false %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "Recordarme" %>
    </div>
  <% end -%>

  <div class="text-center">
    <%= f.submit 'Ingresar', class: "btn btn-primary" %>
  </div>
<% end %>

<div class="container-fluid">
  <%= render "devise/shared/links" %>
</div>
