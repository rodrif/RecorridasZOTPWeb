<h2 class="sub-header">Mis datos</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => 'form-horizontal container-fluid' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-md-1 control-label", for: "resource_email" %>
    <div class="col-md-10">
      <%= f.email_field :email, autofocus: true, class: "form-control", :readonly => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :nombre, class: "col-md-1 control-label", for: "resource_name" %>
    <div class="col-md-10">
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apellido, class: "col-md-1 control-label", for: "resource_apellido" %>
    <div class="col-md-10">
      <%= f.text_field :apellido, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t("common.telefono"), class: "col-md-1 control-label", for: "user_telefono" %>
    <div class="col-md-10">
      <%= f.text_field :telefono, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :fecha_nacimiento, class: "col-md-1 control-label", for: "user_fecha_nacimiento" %>
    <div class="col-md-10">
      <%= f.date_field :fecha_nacimiento, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Día", class: "col-md-1 control-label", for: "user_dia" %>
    <div class="col-md-10">
      <%= f.collection_select :dia, ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes'], :to_s, :humanize, {:include_blank => false}, {:class => "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Área", class: "col-md-1 control-label", for: "resource_area_id" %>
    <div class="col-md-10">
      <%= f.collection_select :area_id, Area.activas, :id, :nombre, {:include_blank => false}, {:class => "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Nueva contraseña", class: "col-md-1 control-label", for: "resource_password" %>
    <div class="col-md-10">
      <i>(dejala en blanco si no la queres cambiar)</i>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "col-md-1 control-label", for: "resource_password_confirmation" %>
    <div class="col-md-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Contraseña actual", class: "col-md-1 control-label", for: "resource_current_password" %>
    <div class="col-md-10">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
    </div>
  </div>

  <%= render 'layouts/buttons_submit', path: root_path, f: f, remote: false %>
<% end %>

<% if false %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete %></p>

<%= link_to "Atrás", :back %>
<% end %>
