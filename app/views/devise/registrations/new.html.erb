<h2 class="sub-header">Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal container-fluid'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña", class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseña", class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "Nombre", class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apellido, class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :apellido, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :telefono, t("common.telefono"), class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :telefono, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :fecha_nacimiento, class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.date_field :fecha_nacimiento, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :jornada_ids, 'Días', class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.collection_check_boxes(:jornada_ids, Jornada.all, :id, :nombre) do |b| %>
        <span>
          <%= b.label(:"data-value" => b.value) { b.check_box + ' ' + b.text } %>
        </span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :area_id, "Sede", class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.collection_select :area_id, Area.activas, :id, :nombre, {:include_blank => false}, {:class => "form-control"} %>
    </div>
  </div>

  <div class="text-center">
    <div class="actions btn-group text-center">
      <%= f.submit 'Registrarse', class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
