

<h1>Listing Alert Types</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alert_types.each do |alert_type| %>
      <tr>
        <td><%= alert_type.nombre %></td>
        <td><%= link_to 'Show', alert_type %></td>
        <td><%= link_to 'Edit', edit_alert_type_path(alert_type) %></td>
        <td><%= link_to 'Destroy', alert_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert type', new_alert_type_path %>
