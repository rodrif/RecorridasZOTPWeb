<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_area_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabelArea" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabelArea">Nueva Sede</h4>
      </div>
      <div class="modal-body">
        <%# Render the new zone form (passing modal => true to enable remote => true) %>
        <%= render 'areas/form', :@area => Area.new, modal: true, puede_editar: true %>
      </div>
    </div>
  </div>
</div>

