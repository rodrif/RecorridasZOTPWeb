<h2 class="sub-header">Auditoría</h2>

<div class="table-responsive well">
  <%= form_for_filterrific @filterrific do |f| %>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Acción
        <%= f.select(
          :with_accion,
          @filterrific.select_options[:with_accion],
          { include_blank: 'Todas' }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Entidad
        <%= f.select(
          :with_entidad,
          @filterrific.select_options[:with_entidad],
          { include_blank: 'Todas' }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Email
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
          :with_email,
          class: 'filterrific-periodically-observed'
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Desde
        <%= f.date_field :fecha_gte %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Hasta
        <%= f.date_field :fecha_lte %>
      </div>
    </div>
  <% end %>

</div>

<%= render 'list', auditorias: @auditorias %>
