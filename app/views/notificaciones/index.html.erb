
<h2 class="sub-header">Notificaciones</h2>

<div class="container-fluid well">
  <%= form_for_filterrific @filterrific do |f| %>
    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.select(
          :with_tipo,
          @filterrific.select_options[:with_notificacion_tipo],
          { include_blank: 'Tipo' },
          { class: "form-control" }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.text_field(
          :with_titulo,
          class: 'filterrific-periodically-observed form-control',
          placeholder: 'TÃ­tulo'
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.date_field(
          :fecha_gte,
          placeholder: 'Desde',
          class: "form-control"
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.date_field(
          :fecha_lte,
          placeholder: 'Hasta',
          class: "form-control"
        ) %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'list', notificaciones: @notificaciones %>

<%= render 'layouts/new_button', :label => 'Nueva notificacion', :path => new_notificacion_path %>

<script type="text/javascript">
  $('#filterrific_fecha_gte').datepicker({
    format: 'dd/mm/yyyy',
    language: 'es'
  });
  $('#filterrific_fecha_lte').datepicker({
    format: 'dd/mm/yyyy',
    language: 'es'
  });
</script>
