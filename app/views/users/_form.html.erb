<%= form_for(@user, :html => {:class => 'form-horizontal container-fluid'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('common.errores.errores') %></h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: "col-md-1 control-label"%>
    <div class="col-md-10">
      <%= f.text_field :email, class: "form-control", :readonly => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "Nombre", class: "col-md-1 control-label"%>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apellido, class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :apellido, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :telefono, t("common.telefono"), class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :telefono, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :fecha_nacimiento, class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.date_field :fecha_nacimiento, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :jornada_ids, 'DÃ­as', class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.collection_check_boxes(:jornada_ids, Jornada.all, :id, :nombre) do |b| %>
        <span>
          <%= b.label(:"data-value" => b.value) { b.check_box + ' ' + b.text } %>
        </span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :area_id, "Sede", class: "col-md-1 control-label" %>
    <div class="col-md-10">
      <%= f.collection_select :area_id, Area.activas, :id, :nombre, {:include_blank => false}, {:class => "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :rol_id, "Roles", class: "col-md-1 control-label" %>
    <div class="col-md-10">
    <%= f.collection_select :rol_id, Rol.all, :id, :nombre, {:include_blank => false}, {:class => "form-control"} %>
    </div>
  </div>

  <%= render 'layouts/buttons_submit', path: users_path, f: f, remote: false, mostrar_aceptar: RolDataAccess.puede_editar_usuarios(current_user) %>

<% end %>
