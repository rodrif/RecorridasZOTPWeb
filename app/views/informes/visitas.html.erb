
<h2 class="sub-header">Visitas por zona
<%= link_to image_tag('excel-icon.png', size: '30x30'),
  '',
  class: 'ubicacion_modal',
  id: 'visitas-xlsx'
%>
</h2>

<div class="table-responsive well">

  <%= form_for_filterrific @filterrific do |f| %>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        √Årea
        <%= f.select(
          :visitas,
          @filterrific.select_options[:visitas],
          { include_blank: 'Todas' }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Desde
        <%= f.date_field :fecha_gte, :value => @filterrific.to_hash()['fecha_gte'] %>
      </div>
    </div>

  <% end %>

</div>

<%= render 'visitas', visitas: @visitas %>

<script defer>
  downloadXlsx('visitas-xlsx', 'filterrific_filter');
</script>
