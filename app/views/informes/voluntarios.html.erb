
<h2 class="sub-header">Voluntarios activos
<%= link_to image_tag('excel-icon.png', size: '30x30'),
  '',
  class: 'ubicacion_modal',
  id: 'voluntarios-xlsx'
%>
</h2>

<div class="table-responsive well">

  <%= form_for_filterrific @filterrific do |f| %>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        √Årea
        <%= f.select(
          :with_area_id,
          @filterrific.select_options[:with_area_id],
          { include_blank: 'Todas' }
        ) %>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 margen-vert">
        Nombre
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
          :search_query,
          class: 'filterrific-periodically-observed'
        ) %>
      </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-4 margen-vert">
        Desde
        <%= f.date_field :voluntarios_activos, :value => @filterrific.to_hash()['voluntarios_activos'] %>
      </div>
    </div>

  <% end %>

</div>

<%= render 'voluntarios', voluntarios: @voluntarios %>

<script defer>
  downloadXlsx('voluntarios-xlsx', 'filterrific_filter');
</script>