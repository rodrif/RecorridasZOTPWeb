<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<% modal ||= false %>
<% remote = modal ? true : false %>
<% puede_editar ||= false %>
<% disabled = !puede_editar %>

<%= form_for(@area, remote: remote, :html => {:class => 'col s12'} ) do |f| %>
  <%= render 'shared/errors', obj: @area %>

  <%= render 'layouts/text_field', name: :nombre, label_name: :nombre, label_name_for: "area_nombre", f: f, remote: remote, puede_editar: puede_editar %>

  <%= render 'layouts/buttons_submit', path: areas_path, f: f, remote: remote, mostrar_aceptar: puede_editar %>
<% end %>
