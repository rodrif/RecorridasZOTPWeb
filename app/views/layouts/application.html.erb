          </form>
        </div> -->
      </div>
</nav>

<div class="container-fluid">
	<div class="row">

  <% if current_user && current_user.rol_id != 5 %>
    <div class="col-sm-3 col-md-2 sidebar">
			<ul class="nav nav-sidebar">
				<li class="active"><%= link_to 'Inicio', root_path %></li>
				<li><%= link_to 'Personas', people_path %></li>
				<li><%= link_to 'Visitas', visits_path %></li>
        <li><%= link_to 'Referentes', referentes_path %></li>
        <li><%= link_to 'Áreas', areas_path %></li>
        <li><%= link_to 'Zonas', zones_path %></li>
        <li><%= link_to 'Ranchadas', ranchadas_path %></li>
        <li><%= link_to 'Grupos Familiares', familias_path %></li>
				<li><%= link_to 'Configuración', configuraciones_path %></li>
			</ul>
    </div>
  <% else %>
    <div class="col-sm-2 col-md-1 sidebar">
    </div>
  <% end %>

		<div class="col-sm-9 col-md-10 main">
      <% if user_signed_in? %>
        <div class="row">
          <div class="col-md-6">
            <%= link_to('Salir', destroy_user_session_path, :method => :delete) %>
          </div>
          <div class="col-md-6 text-right">
            <% if !current_user.name.blank? %>
              <%= current_user.name %>
            <% else %>
              <%= current_user.email %>
            <% end %>
          </div>
        </div>
      <% else %>
        <li>
        <%= link_to('Ingresar', new_user_session_path)  %>
        </li>
      <% end %>

      <% if flash[:error] %>
        <p id="flash-error" class="alert alert-danger"><%= flash[:error] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p id="flash-alert" class="alert alert-danger"><%= flash[:alert] %></p>
      <% end %>
      <% if flash[:notice] %>
        <p id="flash-notice" class="alert alert-success"><%= flash[:notice] %></p>
      <% end %>

			<%= yield %>
		</div>

	</div>
</div>

</body>
</html>
