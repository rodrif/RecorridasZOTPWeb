<!DOCTYPE html>
<html>
<head>
  <title>TpRecorridasZO</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= analytics_init if GoogleAnalytics.valid_tracker? %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="logoRecorridas" href="#">
          <%= image_tag("logo22.png", size: "50x50", :alt => "TpRecorridasZO") %>
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if current_user && current_user.rol_id != 5 %>
            <li class="active"><%= link_to 'Inicio', root_path %></li>
            <li><%= link_to 'Personas', people_path %></li>
            <li><%= link_to 'Visitas', visits_path %></li>
            <li><%= link_to 'Áreas', areas_path %></li>
            <li><%= link_to 'Zonas', zones_path %></li>
            <li><%= link_to 'Ranchadas', ranchadas_path %></li>
            <li><%= link_to 'Grupos Familiares', familias_path %></li>
            <li><%= link_to 'Configuración', configuraciones_path %></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to('Salir', destroy_user_session_path, :method => :delete) %>
            </li>
            <li>
              <% if !current_user.name.blank? %>
                <%= current_user.name %>
              <% else %>
                <%= current_user.email %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to('Ingresar', new_user_session_path)  %>
            </li>
          <% end %>
        </ul>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if flash[:error] %>
    <p id="flash-error" class="alert alert-danger"><%= flash[:error] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p id="flash-alert" class="alert alert-danger"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p id="flash-notice" class="alert alert-success"><%= flash[:notice] %></p>
  <% end %>

  <%= yield %>

</body>
</html>
