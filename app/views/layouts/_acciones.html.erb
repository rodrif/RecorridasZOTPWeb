<% current_user ||= false %>
<% visits_person_id ||= false %>
<% edit_path ||= false %>
<% delete_path ||= false %>
<% new_path ||= false %>
<% remote ||= false %>

<% if visits_person_id %>
	<%= link_to '',
	    {
	      :controller => 'visits',
	      :action => :index,
	      :person_id => visits_person_id
	    },
	    {
	      :class => 'glyphicon glyphicon-eye-open',
	      :title => 'Visitas'
	    }
	%>
<% end %>

<% if new_path && remote %>
    <%= link_to '', new_path, {
        class: 'glyphicon glyphicon-plus',
        title: 'crear',
        data: {toggle: 'modal'}
      }
    %>
<% end %>

<% if edit_path && current_user %>
  <% if remote %>
    <%= link_to '', edit_path,
        class: 'glyphicon glyphicon-edit',
        title: 'editar',
        remote: true,
        data: {toggle: 'modal', target: '#edit_pedido_modal'}
    %>
  <% else %>
    <%= link_to '', edit_path,
      class: 'glyphicon glyphicon-edit',
      title: t("common.ver_editar")
    %>
  <% end %>
<% end %>

<% if delete_path && current_user %>
	<%= link_to '', delete_path,
    method: :delete,
    data: { confirm: '¿Estás seguro?' },
    class: 'glyphicon glyphicon-remove',
    title: 'Borrar'
  %>
<% end %>
