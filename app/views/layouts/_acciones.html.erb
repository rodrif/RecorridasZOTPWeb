<% current_user ||= false %>
<% visits_person_id ||= false %>
<% institucion_id ||= false %>
<% edit_path ||= false %>
<% delete_path ||= false %>
<% new_path ||= false %>
<% remote ||= false %>

<% if visits_person_id %>
	<%= link_to material_icon.remove_red_eye,
	    {
	      :controller => 'visits',
	      :action => :index,
	      :person_id => visits_person_id
	    },
	    {
	      :title => 'Visitas'
	    }
	%>
<% end %>

<% if institucion_id %>
	<%= link_to material_icon.person,
	    {
	      :controller => 'people',
	      :action => :index,
	      :institucion_id => institucion_id
	    },
	    {
	      :title => 'Personas'
	    }
	%>
<% end %>

<% if new_path && remote %>
    <%= link_to material_icon.add_box, new_path, {
        title: 'crear',
        data: {toggle: 'modal'}
      }
    %>
<% end %>

<% if edit_path && current_user %>
  <% if remote %>
    <%= link_to material_icon.edit, edit_path,
        title: 'editar',
        remote: true,
        data: {toggle: 'modal', target: '#edit_pedido_modal'}
    %>
  <% else %>
    <%= link_to material_icon.edit, edit_path,
      title: t("common.ver_editar")
    %>
  <% end %>
<% end %>

<% if delete_path && current_user %>
	<%= link_to material_icon.delete, delete_path,
    method: :delete,
    data: { confirm: '¿Estás seguro?' },
    title: 'Borrar'
  %>
<% end %>
