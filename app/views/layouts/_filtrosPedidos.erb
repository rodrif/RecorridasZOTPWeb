<% label_searcher ||= false %>

<div class="container-fluid well">

  <%= form_for_filterrific @filterrific do |f| %>
    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.select(
          :with_area_id,
          @filterrific.select_options[:with_area_id],
          { include_blank: 'Sede' },
          { class: "form-control" }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.select(
          :with_zone_id,
          @filterrific.select_options[:with_zone_id],
          { include_blank: 'Zona' },
          { class: "form-control" }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%= f.select(
          :is_complete,
          @filterrific.select_options[:is_complete],
          { include_blank: 'Completado' },
          { class: "form-control" }
        ) %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12 col-md-3 margen-vert">
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
          :search_query,
          class: 'filterrific-periodically-observed form-control',
          placeholder: label_searcher ? label_searcher : 'Nombre / Apodo'
        ) %>
      </div>
    </div>

  <% end %>

</div>
