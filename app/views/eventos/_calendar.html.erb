<%= month_calendar attribute: :fecha_desde, end_attribute: :fecha_hasta, events: eventos do |date, eventos| %>
  <%= link_to date.strftime("%-d"), new_evento_path({date: date})%>
  <% eventos.each do |evento| %>
    <div>
      <%= link_to evento.titulo, edit_evento_path(evento), class: "btn sm" %>
    </div>
  <% end %>
<% end %>